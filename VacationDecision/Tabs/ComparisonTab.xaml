<UserControl x:Class="VacationDecision.Tabs.ComparisonTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="300" MaxHeight="500" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="10" HorizontalAlignment="Center" Text="{Binding Path=CurrentWinnerText}" />
        
        
        
        <Button Grid.Row="2" Margin="10" Padding="5" Content="Compare from the beginning" />
    </Grid>
</UserControl>

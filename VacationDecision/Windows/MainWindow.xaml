<Window x:Class="VacationDecision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tabs="clr-namespace:VacationDecision.Tabs"
        Title="Vacation Decision" Height="520" Width="600"
        ResizeMode="NoResize">
    <TabControl Name="EntityTabControl" SelectionChanged="TabControl_SelectionChanged">
        <TabItem Header="Experts">
            <tabs:ExpertEntityTab DataContext="{Binding Path=Experts}" Margin="0" VerticalAlignment="Top" />
        </TabItem>
        <TabItem Header="Alternatives">
            <tabs:AlternativeEntityTab DataContext="{Binding Path=Alternatives}" Margin="0" VerticalAlignment="Top" />
        </TabItem>
        <TabItem Header="Criteria">
            <tabs:CriterionEntityTab DataContext="{Binding Path=Criteria}" Margin="0" VerticalAlignment="Top" />
        </TabItem>
        <TabItem Header="Marks">
            <tabs:MarkEntityTab DataContext="{Binding Path=Marks}" Margin="0" VerticalAlignment="Top" />
        </TabItem>
        <TabItem Header="Vector">
            <tabs:VectorEntityTab DataContext="{Binding Path=Vectors}" Margin="0" VerticalAlignment="Top"  />
        </TabItem>
    </TabControl>
</Window>
